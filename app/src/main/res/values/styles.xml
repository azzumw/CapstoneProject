<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="primaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="secondaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="headStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subHeadStyle1" parent="headStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="subHeadStyle2">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="subHeadStyle3" parent="subHeadStyle2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cardStyle">
        <item name="android:layout_margin">@dimen/padding_4dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">@dimen/padding_16dp</item>
    </style>

    <style name="socialIconStyle">
        <item name="android:layout_margin">@dimen/padding_4dp</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


</resources>
